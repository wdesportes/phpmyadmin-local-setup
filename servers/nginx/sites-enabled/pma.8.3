server {
    set $serverName "pma.8.3.local";
    set $version "8.3";
	set $socket "8.3.williamdes.local:9000";
    set $folder "/mnt/Dev/phpmyadmintest";
	listen	   443 ssl http2;
	listen	   80;
	access_log /var/log/nginx/access_localhost.8.3.log;
	error_log /var/log/nginx/error_localhost.8.3.log error;
	server_name pma.8.3.local;
	index index.php index.html;
	root	$folder;
	server_tokens off;
	ssl_certificate      /etc/nginx/nginx-selfsigned.crt;
	ssl_certificate_key  /etc/nginx/nginx-selfsigned.key;
	location /robots.txt {
		return 200 "User-agent: *\nDisallow: /";
	}
	location / {
		index index.php;
		try_files $uri $uri/ =404;
	}
	location ~ \.php$ {
		include snippets/fastcgi-php.conf;
		fastcgi_param PHP_ADMIN_VALUE "open_basedir=$document_root:/tmp";
		fastcgi_pass $socket;
	}
}
