server {
    set $serverName "8.2.local";
    set $version "8.2";
    set $socket "8.2.williamdes.local:9000";
    set $folder "/mnt/Dev/";
	listen	   443 ssl http2;
	listen	   80;
	client_header_buffer_size 64k;
	proxy_buffer_size  64k;    # this is for header and first body part
	proxy_buffers      8 64k;
	access_log /var/log/nginx/access_localhost.8.2.log;
	error_log /var/log/nginx/error_localhost.8.2.log error;
	server_name 8.2.local;
	index index.php index.html;
	root	$folder;
	server_tokens off;
	ssl_certificate      /etc/nginx/nginx-selfsigned.crt;
	ssl_certificate_key  /etc/nginx/nginx-selfsigned.key;
	location /robots.txt {
		return 200 "User-agent: *\nDisallow: /";
	}
	location / {
		index index.php;
		try_files $uri $uri/ =404;
	}
	location ~ \.php$ {
		include snippets/fastcgi-php.conf;
		fastcgi_param PHP_ADMIN_VALUE "open_basedir=$document_root:/tmp";
		fastcgi_pass $socket;
	}
}
